{
  "manifest_version": 3,
  "name": "DocuFind AI",
  "version": "1.0",
  "description": "Quickly find documents, links, and files from chat histories with AI assistance.",
  "permissions": ["activeTab", "storage", "scripting"],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content_script.js"]
    }
  ]
}
