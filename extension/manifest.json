{
  "manifest_version": 3,
  "name": "DocuFind AI",
  "version": "2.0",
  "description": "Find and summarize documents, files, and links from chat histories with AI assistance.",
  "permissions": [
    "activeTab", 
    "storage", 
    "scripting"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://web.telegram.org/*",
    "https://*.slack.com/*",
    "https://teams.microsoft.com/*",
    "https://discord.com/*",
    "https://app.discord.com/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*",
        "https://web.telegram.org/*",
        "https://*.slack.com/*",
        "https://teams.microsoft.com/*",
        "https://discord.com/*",
        "https://app.discord.com/*"
      ],
      "js": ["src/chat-scanner.js"],
      "css": ["src/sidebar.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/sidebar.html", "src/sidebar.js", "src/sidebar.css"],
      "matches": [
        "https://web.whatsapp.com/*",
        "https://web.telegram.org/*",
        "https://*.slack.com/*",
        "https://teams.microsoft.com/*",
        "https://discord.com/*",
        "https://app.discord.com/*"
      ]
    }
  ]
}